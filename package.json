{
  "name": "nextjs-boilerplate",
  "version": "0.1.0",
  "buildNumber": "set-in-ci-pipeline",
  "private": true,
  "description": "This repo serves at a boilerplate to help stand up a new nextjs app",
  "engines": {
    "node": "=18.17.x",
    "npm": "=9"
  },
  "scripts": {
    "prepare": "husky install",
    "postinstall": "next build",
    "dev": "next dev",
    "build": "next build",
    "build:analyze": "cross-env ANALYZE=true next build",
    "start": "next start",
    "start:prod": "node --require ./load-appInsights.js node_modules/next/dist/bin/next start",
    "start:insights": "node --require ./load-appinsights.js node_modules/next/dist/bin/next start",
    "start:pm2": "pm2 start ecosystem.config.js --no-daemon",
    "lint": "next lint . -f table",
    "lint:fix": "eslint --fix . -f table",
    "test": "jest",
    "test:report": "open html-report/report.html",
    "test:cover": "jest --coverage",
    "test:cover:report": "open coverage/lcov-report/index.html",
    "test:e2e": "cypress run",
    "test:e2e:open": "cypress open",
    "test:e2e:report": "open cypress/reports/index.html",
    "test:e2e:verify": "cypress verify",
    "test:e2e:ci": "start-test start 3000 test:e2e",
    "test:e2e:env": "./node_modules/.bin/cypress run",
    "test:e2e:docker": "docker run -it -v $PWD:/e2e -w /e2e cypress/included:9.2.0",
    "format": "prettier --check .",
    "format:fix": "prettier --write .",
    "pre-commit": "validate-branch-name && lint-staged"
  },
  "dependencies": {
    "@microsoft/applicationinsights-react-js": "^17.0.3",
    "@microsoft/applicationinsights-web": "^3.0.7",
    "@next/bundle-analyzer": "^14.1.0",
    "applicationinsights": "^2.9.2",
    "next": "^14.1.0",
    "next-auth": "^4.24.5",
    "pascalcase": "^1.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-query": "^3.39.3",
    "url": "^0.11.3"
  },
  "devDependencies": {
    "@babel/core": "^7.23.7",
    "@next/eslint-plugin-next": "^14.1.0",
    "@testing-library/cypress": "^10.0.1",
    "@testing-library/jest-dom": "^6.2.0",
    "@testing-library/react": "^14.1.2",
    "@types/jest": "^29.5.11",
    "@types/pascalcase": "^1.0.3",
    "@types/react": "^18.2.48",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "babel-jest": "^29.7.0",
    "babel-loader": "^9.1.3",
    "cross-env": "^7.0.3",
    "cypress": "^13.6.3",
    "cypress-mochawesome-reporter": "^3.8.0",
    "cypress-multi-reporters": "^1.6.4",
    "dotenv": "^16.3.2",
    "http": "0.0.1-security",
    "msw": "^1.3.2",
    "eslint-config-next": "14.1.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-formatter-table": "^7.32.1",
    "eslint-plugin-cypress": "^2.15.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jest": "^27.6.3",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "husky": "^8.0.3",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-html-reporters": "^3.1.7",
    "jest-junit": "^16.0.0",
    "junit-report-merger": "^6.0.3",
    "lint-staged": "^15.2.0",
    "mocha-junit-reporter": "^2.2.1",
    "next-router-mock": "^0.9.11",
    "next-test-api-route-handler": "3.1.10",
    "prettier": "^3.2.4",
    "start-server-and-test": "^2.0.3",
    "typescript": "^5.2.2",
    "validate-branch-name": "^1.3.0",
    "whatwg-fetch": "^3.6.20"
  },
  "lint-staged": {
    "./**/*.[jt]s?(x)": [
      "eslint --fix"
    ],
    "*": [
      "prettier --write"
    ]
  },
  "msw": {
    "workerDirectory": "public"
  },
  "prettier": {
    "semi": true,
    "printWidth": 100,
    "singleQuote": true,
    "trailingComma": "es5",
    "arrowParens": "avoid"
  },
  "validate-branch-name": {
    "pattern": "^(?!([mM]aster)|([mM]ain)$).*$",
    "errorMsg": "Avoid commiting witihout a branch. See readme for details."
  }
}
