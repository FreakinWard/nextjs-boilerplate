{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "appNamePrefix": {
      "type": "string",
      "minLength": 1,
      "defaultValue": "node-linux"
    },
    "skuName": {
      "type": "string",
      "defaultValue": "P1V2",
      "allowedValues": [
        "D1",
        "F1",
        "B1",
        "B2",
        "B3",
        "S1",
        "S2",
        "S3",
        "P1",
        "P2",
        "P3",
        "P1V2",
        "P2V2",
        "P3V2",
        "I1",
        "I2",
        "I3",
        "Y1",
        "EP1",
        "EP2",
        "EP3"
      ],
      "metadata": {
        "description": "Describes plan's pricing tier and capacity. Check details at https://azure.microsoft.com/en-us/pricing/details/app-service/"
      }
    },
    "skuCapacity": {
      "type": "int",
      "defaultValue": 1,
      "minValue": 1,
      "metadata": {
        "description": "Describes plan's instance count"
      }
    }
  },
  "variables": {
    "hostingPlanName": "[concat('HostingPlan-', parameters('appNamePrefix'), uniqueString(resourceGroup().id))]",
    "webSiteName": "[concat('Website-', parameters('appNamePrefix'), uniqueString(resourceGroup().id))]",
    "appInsightsName": "[concat('AppInsights-', parameters('appNamePrefix'), uniqueString(resourceGroup().id))]",
    "logAnalyticsName": "[concat('LogAnalytics-', parameters('appNamePrefix'), uniqueString(resourceGroup().id))]",
    "linuxFxVersion": "NODE|14-lts"
  },
  "resources": [
    {
      "apiVersion": "2018-11-01",
      "name": "[variables('webSiteName')]",
      "type": "Microsoft.Web/sites",
      "location": "[resourceGroup().location]",
      "dependsOn": [
        "[concat('Microsoft.Web/serverfarms/', variables('hostingPlanName'))]",
        "microsoft.insights/components/AppMonitoredSite"
      ],
      "kind": "app,linux",
      "properties": {
        "name": "[variables('webSiteName')]",
        "siteConfig": {
          "appSettings": [
            {
              "name": "ApplicationInsightsAgent_EXTENSION_VERSION",
              "value": "~3"
            },
            {
              "name": "XDT_MicrosoftApplicationInsights_Mode",
              "value": "default"
            }
          ],
          "linuxFxVersion": "[variables('linuxFxVersion')]",
          "alwaysOn": false
        },
        "serverFarmId": "[concat(resourceGroup().id, '/providers/Microsoft.Web/serverfarms/', variables('hostingPlanName'))]",
        "clientAffinityEnabled": false
      }
    },
    {
      "type": "Microsoft.Web/serverfarms",
      "apiVersion": "2018-02-01",
      "name": "[variables('hostingPlanName')]",
      "location": "[resourceGroup().location]",
      "sku": {
        "name": "[parameters('skuName')]",
        "capacity": "[parameters('skuCapacity')]"
      },
      "kind": "linux",
      "tags": {},
      "properties": {
        "name": "[variables('hostingPlanName')]",
        "reserved": true
      }
    },

    {
      "apiVersion": "2015-05-01",
      "name": "AppMonitoredSite",
      "type": "microsoft.insights/components",
      "location": "[resourceGroup().location]",
      "properties": {
        "applicationId": "[variables('appInsightsName')]",
        "Request_Source": "IbizaWebAppExtensionCreate"
      }
    },
  ]
}